<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/file_name"
        android:id="@+id/file_name_hint" />
    
    <EditText 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_name_hint"
        android:id="@+id/file_name"
        android:paddingRight="10dp"
        android:inputType="text"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/file_name"
        android:paddingTop="10dp"
        android:text="@string/file_content"
        android:id="@+id/file_content_hint" />
    
    <EditText 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_content_hint"
        android:id="@+id/file_content"
        android:minLines="3"
        android:inputType="textMultiLine"/>
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_content"
        android:text="@string/save"
        android:id="@+id/save"/>

</RelativeLayout>
